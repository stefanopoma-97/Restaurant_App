<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Activity_Menu_Admin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">



        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_myrestaurant_home_admin"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardview_create_restaurant_admin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".03"

            app:layout_constraintWidth_percent=".48"


            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout1_home_admin">






                <ImageView
                    android:id="@+id/imageView_myrestaurant_home_admin"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"

                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout1_home_admin"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout1_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1_home_admin"
                    app:srcCompat="@drawable/my_restaurant_image"
                    />

                <TextView
                    android:id="@+id/textview_myrestaurant_menu_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/title_card"
                    android:textColor="@color/white"
                    android:text="@string/restaurant"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout1_home_admin"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout1_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1_home_admin"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintVertical_bias=".9"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_create_restaurant_admin"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toEndOf="@id/cardview_myrestaurant_home_admin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".03"

            app:layout_constraintWidth_percent=".48"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2_home_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_create_restaurant_admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2_home_admin"
                    app:srcCompat="@drawable/new_restaurant_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_create_restaurant_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Restaurant"
                    android:gravity="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout2_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2_home_admin"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_profile_home_admin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview_create_restaurant_admin"

            app:layout_constraintVertical_bias=".0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3_home_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_profile_home_admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout3_home_admin"
                    app:srcCompat="@drawable/profile_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_profile_menu_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout3_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout3_home_admin"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_notifications_home_admin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview_profile_home_admin"

            app:layout_constraintVertical_bias=".0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4_home_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_notification_home_admin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout4_home_admin"
                    app:srcCompat="@drawable/notifications_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_notification_menu_admin"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_title"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout4_home_admin"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout4_home_admin"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>