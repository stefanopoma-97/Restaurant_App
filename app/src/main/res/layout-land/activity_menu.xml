<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".menu.Activity_Menu">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_restaurant_home_client"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardview_favourite_home_client"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".03"

            app:layout_constraintWidth_percent=".48">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1_home_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_restaurant_home_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1_home_client"
                    app:srcCompat="@drawable/restaurant_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_restaurant_menu_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout1_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1_home_client"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_favourite_home_client"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"

            app:layout_constraintStart_toEndOf="@+id/cardview_restaurant_home_client"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".03"
            app:layout_constraintWidth_percent=".48">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2_home_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_favourite_home_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2_home_client"
                    app:srcCompat="@drawable/favourite_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_favourite_menu_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favourites"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout2_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2_home_client"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_profile_home_client"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview_favourite_home_client"

            app:layout_constraintVertical_bias=".0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3_home_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_profile_home_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout3_home_client"
                    app:srcCompat="@drawable/profile_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_profile_menu_client"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout3_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout3_home_client"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_notifications_home_client"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_dimension"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview_profile_home_client"

            app:layout_constraintVertical_bias=".0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4_home_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView_notification_home_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:adjustViewBounds="true"
                    android:foreground="@drawable/gradient_image"
                    android:foregroundTintMode="src_atop"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout4_home_client"
                    app:srcCompat="@drawable/notifications_image" />

                <TextView
                    style="@style/title_card"
                    android:id="@+id/textview_notification_menu_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_title"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintStart_toStartOf="@id/constraintLayout4_home_client"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout4_home_client"
                    app:layout_constraintVertical_bias=".9"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>