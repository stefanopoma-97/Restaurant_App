<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SPLASH -->
    <style name="splash_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="title_slash" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@drawable/title_splash_color</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@drawable/title_splash_color</item>
    </style>

    <style name="sub_title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@drawable/title_splash_color</item>
    </style>

    <style name="slogan_slash" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
        <item name="android:textColor">@drawable/slogan_splash_color</item>
    </style>


    <!-- Round logo -->
    <style name="round_logo_external">
        <item name="android:width">@dimen/round_logo_width_external</item>
        <item name="android:height">@dimen/round_logo_width_external</item>
    </style>

    <!-- Button -->
    <style name="button_primary" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--> Text <-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>

        <!--> Background color <-->
        <!--<item name="background">@drawable/button_primary_background</item>-->
    </style>

    <style name="button_primary_admin" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_link</item>
    </style>

    <style name="button_secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/grey</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>

        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>

        <item name="android:textColor">@color/white</item>
    </style>


    <style name="main_button_style" parent="Widget.MaterialComponents.Button">
        <!--<item name="android:background">@drawable/button_primary_background</item>-->
        <!--<item name="android:textColor">@drawable/button_primary_textcolor</item>-->
        <item name="android:backgroundTint">@color/red</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>

        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>


    </style>

    <style name="chip_styles" parent="Base.Widget.MaterialComponents.Chip">
    <item name="android:checkable">true</item>

    <item name="chipIconVisible">false</item>
    <item name="closeIconVisible">false</item>

    <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>
  </style>




    <style name="MyActionBar"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:colorForeground">@color/red</item>
    </style>
</resources>