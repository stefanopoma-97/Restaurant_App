<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Fragment_Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_alert_message_loginform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="wrong pass"


            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"

            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/login_confirm"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_loginform"
            app:layout_constraintVertical_bias="0.274"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/username_loginform"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toTopOf="@+id/password_loginform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias=".9"
            app:layout_constraintHorizontal_bias=".3"
            android:visibility="gone"

            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:hint="@string/username"/>


        <EditText
            android:id="@+id/email_loginform"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size_medium"

            app:layout_constraintBottom_toTopOf="@+id/password_loginform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias=".9"
            app:layout_constraintHorizontal_bias=".3"

            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:hint="@string/email"/>

        <EditText
            android:id="@+id/password_loginform"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size_medium"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias=".3"
            app:layout_constraintHorizontal_bias=".3"

            android:inputType="textPassword"
            android:selectAllOnFocus="true"

            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:hint="@string/password"/>

        <TextView
            android:id="@+id/text_register_loginform"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_cancel_loginform"
            app:layout_constraintVertical_bias=".2" />



        <com.google.android.material.button.MaterialButton
            style="@style/main_button_style"
            app:cornerRadius="@dimen/button_radius"


            android:id="@+id/login_confirm"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/login"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_loginform"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintWidth_percent=".8"

            />

        <com.google.android.material.button.MaterialButton
            style="@style/button_secondary"
            app:cornerRadius="@dimen/button_radius"

            android:id="@+id/button_cancel_loginform"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".8"

            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_confirm"

            app:layout_constraintVertical_bias=".1"
            app:layout_constraintHorizontal_bias=".5"

            android:text="@string/cancel"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>