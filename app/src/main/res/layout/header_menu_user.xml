<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_logo_menu"
    android:background="@color/red"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/round_logo_width_external"
            android:layout_height="@dimen/round_logo_width_external"
            app:cardCornerRadius="@dimen/round_logo_width_external">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/logo_launcher" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_user_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_text"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="@string/app_name"
                android:textSize="@dimen/padding_top_title_medium"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/white"
                 />

        </LinearLayout>


    </LinearLayout>
    


</LinearLayout>