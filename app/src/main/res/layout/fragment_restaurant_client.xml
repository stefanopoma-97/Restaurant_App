<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant.Activity_Restaurant_Client">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout

                android:id="@+id/tablelayout_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red">

                    <TextView
                        android:id="@+id/textview_account_add_new_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/padding_top_title_min"

                        android:visibility="invisible" />
                </TableRow>


                <TableRow
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_top_title_medium">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_fragment_restaurant"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/account_image_size"
                        app:cardCornerRadius="50dp"
                        >

                        <ProgressBar
                            android:id="@+id/progress_bar_fragment_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias=".5"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias=".4" />

                        <ImageView
                            android:id="@+id/imagevire_fragment_restaurant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_image" />
                    </androidx.cardview.widget.CardView>

                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/padding_top_title_medium"
                    android:paddingBottom="@dimen/padding_top_title_medium"
                    android:text="@string/account_information"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_name_fragment_restuarant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="Nomde del ristorante"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="invisible"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/textview_description_fragment_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="derdffnsngng dd f gfdbf  ffhhffhfffdkfffksjf ffffffffffffffffffffffffffffffffff"

                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="invisible"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textview_city_fragment_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="Palazzolo"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="invisible"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_category_fragment_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="Categoria"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="invisible"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textview_mail_fragment_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="mail"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:visibility="invisible"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textview_tag_fragment_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center_horizontal"
                        android:text="tag1 tag2 tag2"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small" />

                </TableRow>


                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_fragment_restaurant"
                        style="@style/main_button_style"
                        android:layout_width="10dp"
                        android:visibility="visible"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_top_title_medium"
                        android:layout_marginBottom="@dimen/padding_top_title_min"

                        android:gravity="center"

                        android:text="@string/account_edit"
                        app:cornerRadius="@dimen/button_radius"

                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias=".5"


                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias=".1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel_fragment_restaurant"
                        style="@style/button_secondary"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_top_title_min"
                        android:layout_marginTop="@dimen/padding_top_title_min"

                        android:gravity="center"

                        android:text="@string/back"
                        app:cornerRadius="@dimen/button_radius"

                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintHorizontal_bias=".5"


                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias=".1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_account_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="@dimen/padding_top_title_min"
                        android:paddingBottom="@dimen/padding_top_title_min"
                        android:text="@string/change_password"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="sans-serif"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">


                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_top_title_large"
                    android:paddingTop="@dimen/padding_top_title_large"
                    >
                </TableRow>

            </TableLayout>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>